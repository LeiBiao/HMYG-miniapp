page {
  color: #555;
  background-color: #eee;
}

.avatar-wrapper {
  background-color: var(--themeColorLight);
  height: 40vh;
  margin-bottom: -80rpx;
  display: flex;
  align-items: center;
}

.avatar-wrapper .avatar-bg {
  width: 100%;
  height: 40vh;
  filter: blur(20rpx);
}

.avatar-wrapper .avatar-content {
  position: absolute;
  top: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
  width: 100%;
  height: 40vh;
}

.avatar-wrapper .avatar-content .avatar {
  width: 160rpx;
  height: 160rpx;
  overflow: hidden;
  border-radius: 50%;
  box-shadow: 0 0 4px 0 #bbb;
}

.avatar-wrapper .avatar-content .user-name {
  color: #fff;
}

.section {
  position: relative;
  margin: 20rpx 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

.flex-row {
  display: flex;
  font-size: 24rpx;
  color: #777;
}

.flex-row .flex-item {
  padding: 20rpx 0;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.flex-row .flex-item .iconfont {
  color: var(--themeColor);
  font-size: 56rpx;
}

.flex-row .flex-item .num {
  color: var(--themeColor);
}

.text-row {
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}

.text-row.section,
.text-row:last-child {
  border-bottom: none;
}
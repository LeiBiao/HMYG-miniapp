<!--pages/cart/cart.wxml-->

<view class="address-wrapper">
	<view
	 class="get-address"
	 hover-class="get-address-hover"
	 wx:if="{{!address.userName}}"
	 bindtap="handleGetAddress"
	>
		获取收货地址
	</view>
	<view
	 wx:else
	 bindtap="changeAddress"
	 class="address-info"
	 hover-class="address-info-hover"
	>
		<text class="iconfont icon-location"></text>
		<view class="address">
			<view class="user">
				<view class="user-name">{{address.userName}}</view>
				{{address.telNumber}}
			</view>
			<view class="address-detail">
				{{address.provinceName + address.cityName+ address.countyName+ address.detailInfo}}
			</view>
		</view>
	</view>
</view>
<view class="header-bar">购物车
	<view
	 class="delete"
	 hidden="{{totalCount==0}}"
	 bindtap="handleDelete"
	>
		删除
	</view>
</view>
<view class="goods-list empty-placeholder">
	<view
	 class="goods-item"
	 wx:for="{{cartData}}"
	 wx:key="goods_id"
	>
		<checkbox
		 color="#E8113A"
		 checked="{{item.checked}}"
		 bindtap="handleItemCheck"
		 data-index="{{index}}"
		/>

		<navigator class="goods-pic" url="/pages/goods_detail/goods_detail?goods_id={{item.goods_id}}">
			<image mode="widthFix" src="{{item.pics[0].pics_sma}}"></image>
		</navigator>

		<view class="goods-info">
			<navigator class="goods-name" url="/pages/goods_detail/goods_detail?goods_id={{item.goods_id}}">
				{{item.goods_name}}
			</navigator>
			<view class="goods-num-price">
				<view class="goods-price">¥ {{item.goods_price}}</view>
				<view class="goods-num">
					<button
					 size="mini"
					 plain="true"
					 type="default"
					 bindtap="handleChangeNum"
					 data-index="{{index}}"
					 data-operation="{{-1}}"
					 disabled="{{item.num<2}}"
					>
						-
					</button>
					<view class="num">
						{{item.num}}
					</view>
					<button
					 size="mini"
					 type="default"
					 plain="true"
					 bindtap="handleChangeNum"
					 data-index="{{index}}"
					 data-operation="{{1}}"
					>
						+
					</button>
				</view>
			</view>
		</view>
	</view>
</view>

<view class="footer-bar" wx:if="{{cartData.length>0}}">
	<checkbox
	 class="check-all"
	 color="#E8113A"
	 bindtap="handleCheckAll"
	 checked="{{allChecked}}"
	>全选
	</checkbox>
	<view class="total">
		<view class="total-value-wrapper">
			合计：
			<view class="total-value">
				¥ {{totalValue}}
			</view>
		</view>
		<view class="total-tip">包含运费</view>
	</view>
	<button
	 class="pay"
	 hover-class="pay-active"
	 disabled="{{totalCount==0}}"
	 bindtap="handlePay"
	>
		结算{{totalCount==0?"":"("+totalCount+")"}}
	</button>
</view>


page {
  padding-bottom: 100rpx;
}
.section-name {
  padding: 18rpx;
  font-size: 30rpx;
  border-top: 1px solid var(--themeColor);
  border-bottom: 1px solid var(--themeColor);
}
.goods-list .goods-item {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #bbb;
  padding: 16rpx;
}
.goods-list .goods-item checkbox {
  transform: scale(0.6);
}
.goods-list .goods-item .goods-pic {
  display: block;
  width: 220rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.goods-list .goods-item .goods-pic image {
  width: 150rpx;
  height: auto;
}
.goods-list .goods-item .goods-info {
  flex: 1;
}
.goods-list .goods-item .goods-name {
  color: #333;
  font-size: 26rpx;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
.goods-list .goods-item .goods-num-price {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-top: 26rpx;
}
.goods-list .goods-item .goods-price {
  color: var(--themeColor);
  font-size: 34rpx;
  font-weight: bold;
}
.goods-list .goods-item .goods-num {
  display: flex;
  align-items: center;
  color: #666;
}
.goods-list .goods-item .goods-num button {
  border-color: #bbb;
  font-size: 24rpx;
  padding: 24rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 30rpx;
  height: 30rpx;
}
.goods-list .goods-item .goods-num view {
  margin: 0 20rpx;
}
.footer-bar {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  border-top: 1px solid #bbb;
}
.footer-bar .check-all {
  color: #666;
  font-size: 40rpx;
  transform: scale(0.6, 0.6);
}
.footer-bar .total {
  display: flex;
  flex: 1;
  font-size: 26rpx;
  flex-direction: column;
  align-items: flex-end;
  margin-right: 10rpx;
}
.footer-bar .total .total-value-wrapper {
  display: flex;
  color: #333;
  font-size: 22rpx;
  align-items: baseline;
}
.footer-bar .total .total-value-wrapper .total-value {
  color: var(--themeColor);
  font-size: 34rpx;
  font-weight: bold;
}
.footer-bar .total .total-tip {
  color: #333;
  font-size: 22rpx;
}
.footer-bar .buy {
  border-radius: 0;
  background: var(--themeColor);
  font-size: 40rpx;
  color: #fff;
  padding: 0;
  margin: 0;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  width: 180rpx;
}
.footer-bar .buy.buy-active {
  background: var(--themeColorDark);
}
.footer-bar .buy[disabled] {
  background: #d1d1d1;
}
